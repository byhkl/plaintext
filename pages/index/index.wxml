<view class="container">
  <!-- 任务标题 -->
  <view class="section">
    <text class="label">任务标题：</text>
    <input class="input" placeholder="小轻提醒" bindinput="bindTitleInput" />
  </view>
  <!-- 任务备注 -->
  <view class="section">
    <text class="label">任务备注：</text>
    <input class="input" placeholder="请输入详细提醒内容" bindinput="bindRemarkInput" />
  </view>
  <!-- 提醒类型选择 -->
  <view class="section">
    <text class="label">提醒类型：</text>
    <radio-group bindchange="bindReminderTypeChange">
      <label class="radio-label">
        <radio value="once" checked="{{reminderType === 'once'}}" />一次性提醒
      </label>
      <label class="radio-label">
        <radio value="periodic" checked="{{reminderType === 'periodic'}}" />周期性提醒
      </label>
    </radio-group>
  </view>
  <!-- 一次性提醒设置 -->
  <view class="section" wx:if="{{reminderType === 'once'}}">
    <text class="label">提醒日期：</text>
    <picker mode="date" value="{{onceDate}}" start="{{startDate}}" end="{{endDate}}" bindchange="bindOnceDateChange">
      <view class="picker">
        {{onceDate ? onceDate : '请选择日期'}}
      </view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'once'}}">
    <text class="label">提醒时间：</text>
    <picker mode="time" value="{{onceTime}}" bindchange="bindOnceTimeChange">
      <view class="picker">
        {{onceTime ? onceTime : '请选择时间'}}
      </view>
    </picker>
  </view>
  <!-- 周期性提醒设置 -->
  <view class="section" wx:if="{{reminderType === 'periodic'}}">
    <text class="label">周期类型：</text>
    <picker mode="selector" range="{{periodTypes}}" value="{{periodTypeIndex}}" bindchange="bindPeriodTypeChange">
      <view class="picker">{{periodTypes[periodTypeIndex]}}</view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'periodic' && periodTypes[periodTypeIndex] === '每年'}}">
    <text class="label">提醒月份：</text>
    <picker mode="selector" range="{{months}}" value="{{periodicMonthIndex}}" bindchange="bindPeriodicMonthChange">
      <view class="picker">{{months[periodicMonthIndex]}}月</view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'periodic' && periodTypes[periodTypeIndex] === '每年'}}">
    <text class="label">提醒日期：</text>
    <picker mode="selector" range="{{periodicDays}}" value="{{periodicDayIndex}}" bindchange="bindPeriodicDayChange">
      <view class="picker">{{periodicDays[periodicDayIndex]}}日</view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'periodic' && periodTypes[periodTypeIndex] === '每月'}}">
    <text class="label">提醒日期：</text>
    <picker mode="selector" range="{{periodicDays}}" value="{{periodicDayIndex}}" bindchange="bindPeriodicDayChange">
      <view class="picker">{{periodicDays[periodicDayIndex]}}日</view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'periodic' && periodTypes[periodTypeIndex] === '每周'}}">
    <text class="label">提醒星期：</text>
    <picker mode="selector" range="{{weeks}}" value="{{periodicWeekIndex}}" bindchange="bindPeriodicWeekChange">
      <view class="picker">{{weeks[periodicWeekIndex]}}</view>
    </picker>
  </view>
  <view class="section" wx:if="{{reminderType === 'periodic'}}">
    <text class="label">提醒时间：</text>
    <picker mode="time" value="{{periodicTime}}" bindchange="bindPeriodicTimeChange">
      <view class="picker">
        {{periodicTime ? periodicTime : '请选择时间'}}
      </view>
    </picker>
  </view>
  <!-- 授权和提交按钮 -->
  <button wx:if="{{!hasUserAuthorized}}" bindtap="requestAuthorization" class="btn">授权服务通知</button>
  <button wx:else bindtap="submitReminder" class="btn">提交提醒设置</button>
</view>