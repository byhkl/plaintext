.container {
  padding: 20px;
}

.section {
  margin-bottom: 20px;
  display: flex;
  align-items: center;
}

.label {
  font-size: 16px;
  color: #333;
}

.input {
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
  flex: 1;
}

.picker {
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
  flex: 1;
}

.radio-label {
  margin-right: 20px;
  font-size: 16px;
  color: #333;
}

.btn {
  background-color: #007aff;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
  font-size: 16px;
}